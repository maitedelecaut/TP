package bddTP2;
import java.sql.*;

public class CreerTable {
	
	public static void main(String args[]) throws Exception
	  { 
		try{
			//connexion au driver
			Class.forName("sun.jdbc.odbc.JdbcOdbcDriver");
		
			// connexion a la base de donnee
			String url = "jdbc:odbc:tp2";
			Connection con = DriverManager.getConnection(url);
			System.out.println("Bien connecté");
			
			try{
				//execution requete
				Statement tmp = con.createStatement();
				String sql = "DROP TABLLE CLIENTS";
				tmp.executeUpdate(sql);
				Statement stmt = con.createStatement();
				stmt.executeUpdate("create table CLIENTS" + "(Nom varchar(10), PRENOM varchar(10), AGE int);");
			}catch(Exception e){
				
			}
		//fermeture des espaces
		con.close();
		}catch(Exception e){
			e.printStackTrace();
		}
	  }
}
